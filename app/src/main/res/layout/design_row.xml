<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFCC00"
        android:layout_margin="20dp"


        android:orientation="vertical">


        <TextView
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"

            android:drawablePadding="10dp"
            android:paddingBottom="8dp"

            android:text="Titlehere"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/addplace"
            tools:scaleType="centerCrop" />


        <TextView
            android:id="@+id/post_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Description here"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textSize="16dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/post_histoy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="History here"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textSize="16dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/post_specality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Speciality here"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textSize="16dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/post_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Time here"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textSize="16dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/post_fees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Fees here"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textSize="16dp"
            android:textStyle="italic" />
    </LinearLayout>

</android.support.v7.widget.CardView>